= form_for @value do |f|
  - if @value.errors.any?
    #error_explanation
      %h2= "#{pluralize(@value.errors.count, "error")} prohibited this value from being saved:"
      %ul
        - @value.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    %br
    = f.number_field :user_id
  .field
    = f.label :image_id
    %br
    = f.number_field :image_id
  .field
    = f.label :value
    %br
    = f.number_field :value
    %div{:style=>"padding-top:10px; padding-bottom:25px;"}
    = f.submit 'Save'
