.container{:style=>"padding-left:50px;"}
  -#=t('test')
  .image
    .row
      .col-md-3
        .left_controls
          .select_theme
        .image_display
          = render 'work/button_theme_select', locale: @current_locale
          %h4{:title => t('.theme_name'), :style=>"margin-top:-10px; margin-left:20px;"}
            #{@selected_theme}
            %br
            %div{:style=>"height:30px"}
              %button{:style=>"width:20px; height:20px; border-radius:10px; background-color: #99958C;"}
              %button{:style=>"width:20px; height:20px; border-radius:10px; background-color: #99958C; margin-left:650px; margin-top:-180px;"}
            %div{:style=>"box-shadow:0 0 15px #0E294B; width:700px; height:500px; "}
              %img{:alt => "Default Image", :src => 'assets/facade.jpg', :title => "Default Image", :style =>"width:700px; height:500px;"}
              %p{:style=>"margin-left:50px; margin-top:-70px; color:#000;letter-spacing:2px;"}
                #{@selected_image_name}
              .image_user_value{:title => "Expert value"}
          .row.diag
            .col-md-12
              .image_diag
                #chosen_value 50
                %h3.down{:title => "Value scale"}
                  = t('.make_decision')
                %button.button__results.save{:style=>"margin:20px; padding:15px; width:300px; box-shadow:0 0 5px #0E294B; background-color:#B0B7C6;"}
                  %a{'data-remote' => "true", :format => "js", :href => "#", :title => "Save image diag results"}
                    = t('.save_decision')
                %br
                %span.left 5%
                #slider
                  %input#slide{:max => "100", :min => "5", :value => "50",
                             :onchange => "updateSlider(this.value)",
                             :step => "5", :type => "range"}
                %span.right 100%
                %br
                %br
                = render 'work/button_list_results'
